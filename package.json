{
  "name": "maplestory-hud",
  "version": "0.1.18",
  "description": "MapleStory TMS HUD Overlay - 楓之谷即時遊戲資訊顯示",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "build:win": "npm run build && electron-builder --win --publish never",
    "build:win:dir": "npm run build && electron-builder --win --dir --publish never",
    "build:win:publish": "npm run build && electron-builder --win --publish always",
    "build:mac": "npm run build && electron-builder --mac",
    "fetch-data": "tsx scripts/fetch-game-data.ts",
    "release:check": "node scripts/release-check.mjs"
  },
  "dependencies": {
    "electron-log": "^5.3.0",
    "electron-store": "^8.2.0",
    "sharp": "^0.33.5",
    "tesseract.js": "^5.1.1",
    "uuid": "^11.0.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@eslint/js": "^9.22.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^4.0.0",
    "eslint": "^9.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^6.0.7",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.maplestory.hud",
    "productName": "MapleStory HUD",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "data/**/*",
      "node_modules/sharp/**/*"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico",
      "signAndEditExecutable": true,
      "verifyUpdateCodeSignature": true
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.png",
      "hardenedRuntime": true,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    }
  }
}
